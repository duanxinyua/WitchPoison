# 女巫的毒药 - 后端环境配置示例  
# 复制此文件为 .env 并填入实际配置值

# 服务器配置
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# 应用信息
APP_NAME=女巫的毒药后端
APP_VERSION=1.0.0

# 游戏配置
DEBUG=true
MAX_PLAYERS_PER_ROOM=5
DEFAULT_BOARD_SIZE=5

# 域名配置（用于CORS等）
FRONTEND_DOMAIN=https://your-domain.com
API_DOMAIN=https://your-domain.com

# WebSocket配置
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=10000

# 开发环境配置
DEV_PORT=3000
DEV_HOST=localhost  
DEV_FRONTEND_DOMAIN=http://localhost:8080